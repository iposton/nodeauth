doctype html
html
  head
    title NodeAuth
  link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar',aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
          img.logo(src='/images/node-logo.png')								
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(class=(title == 'Members' ? 'active' : ''))
              a(href='/') Members	
            if user  
              li(class=(title == 'Add Post' ? 'active' : ''))
                a(href='/posts/add') Add Post
              li(class=(title == 'Add Category' ? 'active' : ''))
                a(href='/categories/add') Add Category		
            if !user  				
              li(class=(title == 'Register' ? 'active' : ''))
                a(href='/users/register') Register
              li(class=(title == 'Login' ? 'active' : ''))
                a(href='/users/login') Log In
          ul.nav.navbar-nav.navbar-right
            if user					
              li
                a(href='/users/logout') Logout
    .container.content
      != messages()
      block content

script( src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
script( src='/javascripts/bootstrap.min.js' )
