extends layout

block content
  h1 Register
  p Please register with the form below
  ul.errors
    if errors 
      each error, i in errors
        li.alert.alert-danger #{error.msg}
  form(method='post', action='/users/register', enctype='')
    .form-group
      label Name
      input.form-control(name='name', type='text', placeholder='Ian Poston')
    .form-group
      label Email
      input.form-control(name='email', type='email', placeholder='ianposton@sbcglobal.net')
    .form-group
      label Username
      input.form-control(name='username', type='text', placeholder='ian215')
    .form-group
      label Password
      input.form-control(name='password', type='text', placeholder='******')
    .form-group
      label Confirm Password
      input.form-control(name='password2', type='text', placeholder='******')
    .form-group
      label Profile Image
      input.form-control(name='profileimage', type='file')
    input.btn.btn-default(name='submit', type='submit', value='Register')



